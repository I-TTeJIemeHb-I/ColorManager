<Window x:Class="ColorManager.Data.Views.TestWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorManager.Data.Views"
        mc:Ignorable="d"
        Title="TestWindow1" WindowStartupLocation="CenterScreen"
        Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Height="40" Width="240" 
                 x:Name="ProjectName_TextBox"
                 VerticalAlignment="Bottom" Margin="0,0,0,20"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"/>

        <Button Grid.Row="1" Height="40" Width="240" Content="Открыть"
                VerticalAlignment="Top" Margin="0,20,0,0"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center" 
                Click="Button_Click"/>

    </Grid>
</Window>
